profiles {
  standard {
    process {
      // útil si usas conda/módulos; aquí lo dejamos simple
      executor = 'local'
      shell = ['/bin/bash','-euo','pipefail','-c']
      beforeScript = 'chmod +x .command.sh || true'
    }
    timeline {
      enabled = true
      file    = "timeline.html"
      overwrite = true
    }
    trace {
      enabled = true
      file    = "trace.txt"
      overwrite = true
    }
  }
}